#include<stdio.h>
main()
{
	printf("select any one of the two options:\n1. 0\n2. 1");
	printf("\n");
	int choice;
	scanf("%d",&choice);
	switch(choice)
	{
		case 1:
			printf("you entered 0");
			break;
		case 2:
			printf("you entered 1");
			break;
	
		default:
			printf("Use the default case");
			
	}
}
